<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#C4C3C3">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Club Editor"
                  android:textColor="@color/black"
                  android:textSize="40sp"
                  android:layout_margin="16dp"
                  android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Club name:"
              android:textColor="@color/black"
              android:layout_marginTop="16dp"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/name_input"
              android:hint="Club name"
              android:textColor="@color/black"
              android:textColorHint="#646262"
              android:minHeight="48dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Club email address:"
              android:textColor="@color/black"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/email_address_input"
              android:hint="club@et.esiea.fr"
              android:textColor="@color/black"
              android:textColorHint="#646262"
              android:minHeight="48dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Club description:"
                android:textColor="@color/black"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/description_input"
              android:hint="Description"
              android:textColor="@color/black"
              android:textColorHint="#646262"
              android:minHeight="48dp"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button_cancel"
                android:text="Cancel"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                android:backgroundTint="#7BC9EB"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button_confirm"
                android:layout_alignParentEnd="true"
                android:text="Confirm"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                android:backgroundTint="#2DAAE1"/>

    </RelativeLayout>

</LinearLayout>